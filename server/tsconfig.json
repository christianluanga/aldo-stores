{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./types", "./node_modules/@types"],
      "outDir": "./dist",
      "rootDir": "./src"
    },
    "include": ["src/**/*.ts", "types/**/*.d.ts","src/**/*.graphql"]
  }
  